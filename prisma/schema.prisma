generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id         String     @id @default(uuid())
    name       String     @unique
    email      String     @unique
    password   String?
    image      String?
    privilages Privilages @default(USER)
    createdAt  DateTime   @default(now())
    lastLogin  DateTime   @updatedAt
    Comment    Comment[]
    album      Album?     @relation(fields: [albumId], references: [id])
    albumId    String?
    Photo      Photo[]
}

model Photo {
    id        String    @id @default(uuid())
    path      String
    title     String?
    createdAt DateTime  @default(now())
    Album     Album?    @relation(fields: [albumId], references: [id])
    albumId   String?
    user      User      @relation(fields: [userId], references: [id])
    userId    String
    Comment   Comment[]
    Metadata  Metadata?
}

model Metadata {
    id           String    @id @default(uuid())
    photo        Photo     @relation(fields: [photoId], references: [id])
    photoId      String    @unique
    width        Int?
    height       Int?
    latitude     Float?
    longitude    Float?
    camera       String?
    lens         String?
    editedIn     String?
    createdAt    DateTime?
    exposure     String?
    iso          Int?
    aperture     Float?
    focalLength  Int?
    flash        String?
    whiteBalance String?
}

model Album {
    id     String  @id @default(uuid())
    title  String
    users  User[]
    photos Photo[]
}

model Comment {
    id        String   @id @default(uuid())
    text      String
    createdAt DateTime @default(now())
    user      User     @relation(fields: [userId], references: [id])
    userId    String
    photo     Photo    @relation(fields: [photoId], references: [id])
    photoId   String
}

enum Privilages {
    USER
    ADMIN
}
