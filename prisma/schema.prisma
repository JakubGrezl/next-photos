generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id         String     @id @default(uuid())
    email      String     @unique
    name       String?
    password   String
    privilages Privilages @default(USER)
    createdAt  DateTime   @default(now())
    lastLogin  DateTime   @updatedAt
    Comment    Comment[]
    album      Album?     @relation(fields: [albumId], references: [id])
    albumId    String?
}

model Photo {
    id        String     @id @default(uuid())
    path      String
    title     String?
    createdAt DateTime   @default(now())
    Album     Album      @relation(fields: [albumId], references: [id])
    albumId   String
    Comment   Comment[]
    Location  Location[]
}

model Location {
    id        String @id @default(uuid())
    latitude  Float
    longitude Float
    photoId   String
    Photo     Photo  @relation(fields: [photoId], references: [id])
}

model Album {
    id     String  @id @default(uuid())
    title  String
    users  User[]
    photos Photo[]
}

model Comment {
    id        String   @id @default(uuid())
    text      String
    createdAt DateTime @default(now())
    user      User     @relation(fields: [userId], references: [id])
    userId    String
    photo     Photo    @relation(fields: [photoId], references: [id])
    photoId   String
}

enum Privilages {
    USER
    ADMIN
}
